{
    "name": "Scratch Live Collab",
    "description": "Multiple Scratchers Work together in Real Time on a Single Project",
    "version": "0.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches":["https://scratch.mit.edu/*"],
            "css":[],
            "run_at": "document_start",
            "all_frames": true,
            "js":["injectors/vm.js"]
        },
        {
            "matches":["https://scratch.mit.edu/projects*editor"],
            "css":[],
            "js":["injectors/editor.js"]
        },
        {
            "matches":["https://scratch.mit.edu/projects/\\d*"],
            "css":[],
            "js":["scripts/project.js"]
        }
    ],
    "background": {
        "service_worker":"background.js"
    },
    "permissions": [
        "tabs"
    ],
    "web_accessible_resources" : [{
        "resources":["/scripts/editor.js","/scripts/vm.js"],
        "matches":["<all_urls>"]
    }],
    "externally_connectable": {
        "matches": ["https://scratch.mit.edu/*"]
    }
}